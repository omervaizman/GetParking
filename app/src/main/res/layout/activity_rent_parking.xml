    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentParkingActivity"
    android:orientation="vertical"
    android:background="@color/backgroundColor">
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar_rentparking"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="35sp"
        android:text="Rent your parking"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/options_bg"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/ll_Location_RentActivity">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/address"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:id="@+id/tvLocation_RentActivity"
            android:hint="Set your parking location"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="19sp"

            />
    </LinearLayout>


