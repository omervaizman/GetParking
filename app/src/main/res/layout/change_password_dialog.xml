<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:layout_gravity="center"
    android:elevation="3dp">
    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/lock"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:elevation="3dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/etColor"
        android:layout_gravity="center"
        android:elevation="3dp"
        android:layout_margin="15dp">
        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"


            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/pencil"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <EditText
            android:layout_height="45dp"
            android:layout_width="190dp"
            android:background="@color/etColor"
            android:hint="current password"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:id="@+id/etCurrentPassword_ChangePassDialog"
            android:elevation="2dp"
            android:inputType="textPassword"/>
        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@color/etColor"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/eye"
                android:id="@+id/ivEyeCurrentPass_changePassDialog"
                android:longClickable="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/etColor"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:elevation="3dp">
        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"


            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/pencil"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <EditText
            android:layout_height="45dp"
            android:layout_width="190dp"
            android:background="@color/etColor"
            android:hint="new password"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:id="@+id/etNewPassword_ChangePassDialog"
            android:elevation="2dp"
            android:inputType="textPassword"/>
        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@color/etColor"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/eye"
                android:id="@+id/ivEyeNewPass_changePassDialog"
                android:longClickable="true"
                />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/etColor"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:layout_marginBottom="10dp"
        android:elevation="3dp">
        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"


            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/pencil"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <EditText
            android:layout_height="45dp"
            android:layout_width="190dp"
            android:background="@color/etColor"
            android:hint="cconfirm new password"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:id="@+id/etConfirmPassword_ChangePassDialog"
            android:elevation="2dp"
            android:inputType="textPassword"/>
        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@color/etColor"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/eye"
                android:id="@+id/ivEyeConfirmPass_changePassDialog"
                android:longClickable="true"
                />
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:text="confirm"
        android:textColor="#fff"
        android:background="@color/buttonColor"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:id="@+id/btnSubmit_ChangePasswordDialog"

        android:elevation="3dp"/>



</LinearLayout>