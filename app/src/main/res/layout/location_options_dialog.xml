<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/post_background"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/options_bg"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:elevation="3dp"
            android:id="@+id/ll_LocationSearch_LocationOptionsDialog">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/searchlocation"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:id="@+id/tvSearchLocation_LocationOptionsDialog"
                android:text="Search location"
                android:textColor="@color/white"
                android:gravity="left|center"
                android:textSize="17sp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/options_bg"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:elevation="3dp"
            android:id="@+id/ll_CurrentLocation_LocationOptionsDialog">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/address"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:id="@+id/tvCurrentLocation_LocationOptionsDialog"
                android:text="  Current Location"
                android:textColor="@color/white"
                android:gravity="left|center"
                android:textSize="18sp"

                />
        </LinearLayout>


    </LinearLayout>



</LinearLayout>